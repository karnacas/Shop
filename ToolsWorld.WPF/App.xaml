<Application x:Class="ToolsWorld.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ToolsWorld.WPF"
             StartupUri="View/AuthorizationWindow.xaml">
    <Application.Resources>
        <Style x:Key="CommonControlStyle">
            <Setter Property="Control.FontSize" Value="20"/>
            <Setter Property="Control.Margin" Value="3"/>
        </Style>

        <Style x:Key="CommonDataGridStyle">
            <Setter Property="DataGrid.AutoGenerateColumns" Value="False"/>
            <Setter Property="DataGrid.Language" Value=""/>
        </Style>
    </Application.Resources>
</Application>
